# Periodic Backend Environment Configuration
# Copy this file to .env and customize for your environment
# .env
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/description_backend?sslmode=disable
DATABASE_SYNC_ON_OFF=off

# Server Configuration
PORT=8080
HOST=127.0.0.1
SERVER_NAME=description_backend-server

# Database Configuration
DB_PATH=description_backend_data
BACKUP_PATH=description_backend_data_backup.json

# Periodic Backup Interval (Examples: 5s, 30s, 1m, 5m, 1h)
# s=seconds, m=minutes, h=hours, d=days
# Valid range: 1s to 24h
PERIODIC_BACKUP_DB=30s
PERIODIC_BACKUP_PATH=.
# json for jsona nd .db for sled dumps
# PERIODIC_BACKUP_NAME=description_backend_data_backup_{{timestamp}}.json
PERIODIC_BACKUP_NAME=description_backend_data_backup_{{timestamp}}.db

# Legacy support (will be converted to "Xs" format)
# BACKUP_INTERVAL_SECONDS=5

# Kitchen IoT Device Connections
KITCHEN_IOT_ENABLED=true
KITCHEN_IOT_URL=http://192.168.1.100:3000
KITCHEN_IOT_TIMEOUT_MS=5000
KITCHEN_IOT_API_KEY=

# Cashier Machine Connections
CASHIER_ENABLED=true
CASHIER_URL=http://192.168.1.101:8081
CASHIER_TIMEOUT_MS=3000
CASHIER_API_KEY=
CASHIER_DEVICE_ID=cashier-001

# Display Connections (for order/menu displays)
DISPLAY_ENABLED=true
DISPLAY_URL=http://192.168.1.102:4000
DISPLAY_TIMEOUT_MS=2000
DISPLAY_API_KEY=
DISPLAY_DEVICE_ID=display-main

# Additional IoT Device Connections
# Format: DEVICE_NAME_URL, DEVICE_NAME_ENABLED, etc.
POS_SYSTEM_ENABLED=false
POS_SYSTEM_URL=http://192.168.1.103:9000
POS_SYSTEM_API_KEY=

INVENTORY_SYSTEM_ENABLED=false
INVENTORY_SYSTEM_URL=http://192.168.1.104:7000
INVENTORY_SYSTEM_API_KEY=

# Logging Configuration
RUST_LOG=info
LOG_FILE_ENABLED=false
LOG_FILE_PATH=description_backend.log

# Security Configuration
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100
AUTH_TOKEN_EXPIRY_HOURS=24

# Access Token Authentication
ACCESS_TOKEN=your-secure-access-token-here-change-this-in-production

# Development/Debug Settings
DEBUG_MODE=false
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

TOKEN_ISS=description_backend
TOKEN_AUD=description_frontend
